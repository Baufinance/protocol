{
  "name": "yearn-protocol",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "ethlint": "^1.2.5",
    "husky": "^4.3.0",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "pretty-quick": "^3.0.2"
  },
  "scripts": {
    "lint": "pretty-quick --pattern '**/*.*(sol|json)' --verbose",
    "lint:check": "prettier --check **/*.sol **/*.json",
    "lint:fix": "pretty-quick --pattern '**/*.*(sol|json)' --staged --verbose",
    "format": "prettier --write 'contracts/**/*.sol' --verbose",
    "format:check": "prettier --check '**/*.*(sol)'",
    "format:fix": "pretty-quick --pattern '**/*.*(sol)' --staged --verbose",
    "hint": "solhint \"contracts/**/*.sol\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "ganache": "^7.7.5",
    "ganache-cli": "^6.12.2",
    "global": "^4.4.0"
  }
}
